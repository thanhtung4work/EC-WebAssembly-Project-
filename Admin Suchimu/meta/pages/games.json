{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "Games"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "icon": "add_circle_outline",
                  "name": "button0",
                  "style": {
                    "marginBottom": "10px"
                  },
                  "text": "Add",
                  "type": "button",
                  "events": {
                    "click": [
                      {
                        "path": "add-game",
                        "type": "popup",
                        "then": [
                          {
                            "code": "await grid0.Reload();",
                            "type": "execute"
                          },
                          {
                            "code": "await InvokeAsync(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ]
                      }
                    ]
                  }
                },
                {
                  "events": {
                    "click": [
                      {
                        "condition": "${event?.Value == \"csv\"}",
                        "fileName": "Games",
                        "name": "suchimnu.getGames",
                        "parameters": [
                          {
                            "name": "$filter",
                            "value": "${(string.IsNullOrEmpty(grid0.Query.Filter)? \"true\" : grid0.Query.Filter)}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${grid0.Query.OrderBy}"
                          },
                          {
                            "name": "$expand",
                            "value": "Category,Studio"
                          },
                          {
                            "name": "$select",
                            "value": "Id,Title,Description,ShortDescription,ImageUrl,Price,OriginalPrice,IsActive,Category.Name as CategoryName,Studio.Name as StudioName,CreateDate,LatestUpdate"
                          }
                        ],
                        "type": "export"
                      },
                      {
                        "condition": "${event == null || event.Value == \"xlsx\"}",
                        "fileName": "Games",
                        "format": "xlsx",
                        "name": "suchimnu.getGames",
                        "parameters": [
                          {
                            "name": "$filter",
                            "value": "${(string.IsNullOrEmpty(grid0.Query.Filter)? \"true\" : grid0.Query.Filter)}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${grid0.Query.OrderBy}"
                          },
                          {
                            "name": "$expand",
                            "value": "Category,Studio"
                          },
                          {
                            "name": "$select",
                            "value": "Id,Title,Description,ShortDescription,ImageUrl,Price,OriginalPrice,IsActive,Category.Name as CategoryName,Studio.Name as StudioName,CreateDate,LatestUpdate"
                          }
                        ],
                        "type": "export"
                      }
                    ]
                  },
                  "icon": "get_app",
                  "items": [
                    {
                      "icon": "",
                      "text": "Excel",
                      "value": "xlsx"
                    },
                    {
                      "icon": "",
                      "text": "CSV",
                      "value": "csv"
                    }
                  ],
                  "name": "splitbutton0",
                  "style": {
                    "marginLeft": "10px",
                    "marginBottom": "10px"
                  },
                  "text": "Export",
                  "type": "splitbutton"
                },
                {
                  "attributes": [
                    {
                      "name": "@oninput",
                      "value": "@(async(args) => {search = $\"{args.Value}\";await grid0.GoToPage(0);await grid0.Reload();})"
                    }
                  ],
                  "name": "textbox0",
                  "placeholder": "Search ...",
                  "style": {
                    "display": "block",
                    "marginBottom": "10px",
                    "width": "100%"
                  },
                  "type": "textbox",
                  "value": ""
                },
                {
                  "name": "grid0",
                  "allowFiltering": true,
                  "filterMode": "advanced",
                  "allowPaging": true,
                  "allowSorting": true,
                  "data": "${getGamesResult}",
                  "events": {
                    "loadData": [
                      {
                        "name": "suchimnu.getGames",
                        "parameters": [
                          {
                            "name": "$top",
                            "value": "event.top"
                          },
                          {
                            "name": "$skip",
                            "value": "event.skip"
                          },
                          {
                            "name": "$count",
                            "value": "event.top != null && event.skip != null"
                          },
                          {
                            "name": "$filter",
                            "value": [
                              {
                                "filters": [
                                  {
                                    "operation": "contains",
                                    "property": "Title",
                                    "type": "string",
                                    "value": "\"${search}\""
                                  },
                                  {
                                    "operation": "contains",
                                    "property": "Description",
                                    "type": "string",
                                    "value": "\"${search}\""
                                  },
                                  {
                                    "operation": "contains",
                                    "property": "ShortDescription",
                                    "type": "string",
                                    "value": "\"${search}\""
                                  },
                                  {
                                    "operation": "contains",
                                    "property": "ImageUrl",
                                    "type": "string",
                                    "value": "\"${search}\""
                                  }
                                ],
                                "operator": "or"
                              },
                              {
                                "value": "${(string.IsNullOrEmpty(event.filter)? \"true\" : event.filter)}"
                              }
                            ],
                            "operator": "and"
                          },
                          {
                            "name": "$orderby",
                            "value": "${event.orderby}"
                          },
                          {
                            "name": "$expand",
                            "value": "Category,Studio"
                          }
                        ],
                        "then": [
                          {
                            "name": "getGamesResult",
                            "type": "set",
                            "value": "${result.Value.AsODataEnumerable()}",
                            "valueType": "IEnumerable<Admin.Models.Suchimnu.Game>"
                          },
                          {
                            "name": "getGamesCount",
                            "type": "set",
                            "value": "${result.Count}",
                            "valueType": "int"
                          }
                        ],
                        "type": "invoke",
                        "error": [
                          {
                            "detail": "Unable to load Games",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ]
                      }
                    ],
                    "rowDoubleClick": [
                      {
                        "parameters": [
                          {
                            "name": "Id",
                            "value": "${event.Data.Id}"
                          }
                        ],
                        "path": "edit-game",
                        "type": "popup",
                        "then": [
                          {
                            "code": "await grid0.Reload();",
                            "type": "execute"
                          },
                          {
                            "code": "await InvokeAsync(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ]
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "Id",
                      "title": "Id"
                    },
                    {
                      "property": "Title",
                      "title": "Title"
                    },
                    {
                      "property": "Description",
                      "title": "Description"
                    },
                    {
                      "property": "ShortDescription",
                      "title": "Short Description"
                    },
                    {
                      "property": "ImageUrl",
                      "title": "Image Url"
                    },
                    {
                      "property": "Price",
                      "title": "Price"
                    },
                    {
                      "property": "OriginalPrice",
                      "title": "Original Price"
                    },
                    {
                      "property": "IsActive",
                      "title": "Is Active"
                    },
                    {
                      "property": "CategoryId",
                      "sortProperty": "Category.Name",
                      "groupProperty": "Category.Name",
                      "filterProperty": "Category.Name",
                      "template": "${data.Category?.Name}",
                      "title": "Category"
                    },
                    {
                      "property": "StudioId",
                      "sortProperty": "Studio.Name",
                      "groupProperty": "Studio.Name",
                      "filterProperty": "Studio.Name",
                      "template": "${data.Studio?.Name}",
                      "title": "Studio"
                    },
                    {
                      "property": "CreateDate",
                      "formatString": "{0:dd/MM/yyyy}",
                      "title": "Create Date"
                    },
                    {
                      "property": "LatestUpdate",
                      "formatString": "{0:dd/MM/yyyy}",
                      "title": "Latest Update"
                    },
                    {
                      "filterable": false,
                      "sortable": false,
                      "width": "70px",
                      "textAlign": "center",
                      "template": [
                        {
                          "attributes": [
                            {
                              "name": "@onclick:stopPropagation",
                              "value": true
                            }
                          ],
                          "buttonStyle": "danger",
                          "icon": "close",
                          "name": "gridDeleteButton",
                          "text": "",
                          "size": "sm",
                          "type": "button",
                          "events": {
                            "click": [
                              {
                                "condition": "await DialogService.Confirm(\"Are you sure you want to delete this record?\") == true",
                                "error": [
                                  {
                                    "detail": "Unable to delete Game",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "name": "suchimnu.deleteGame",
                                "parameters": [
                                  {
                                    "name": "Id",
                                    "value": "${data.Id}"
                                  }
                                ],
                                "then": [
                                  {
                                    "code": "await grid0.Reload();",
                                    "condition": "result != null && result.StatusCode == System.Net.HttpStatusCode.NoContent",
                                    "type": "execute"
                                  },
                                  {
                                    "condition": "result != null && result.StatusCode != System.Net.HttpStatusCode.NoContent",
                                    "detail": "Unable to delete Game",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "type": "invoke"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  ],
                  "type": "datagrid",
                  "count": "${getGamesCount}",
                  "itemType": "Admin.Models.Suchimnu.Game"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "condition": "string.IsNullOrEmpty(search)",
        "name": "search",
        "type": "set",
        "value": "\"\"",
        "valueType": "string"
      }
    ]
  },
  "name": "Games",
  "layout": "Main"
}