{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Title",
                              "component": "Title",
                              "name": "TitleLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "type": "textbox",
                              "name": "Title",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${game.Title}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Description",
                              "component": "Description",
                              "name": "DescriptionLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "type": "textbox",
                              "name": "Description",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${game.Description}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Short Description",
                              "component": "ShortDescription",
                              "name": "ShortDescriptionLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "type": "textbox",
                              "name": "ShortDescription",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${game.ShortDescription}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Image Url",
                              "component": "ImageUrl",
                              "name": "ImageUrlLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "type": "textbox",
                              "name": "ImageUrl",
                              "style": {
                                "width": "100%"
                              },
                              "value": "${game.ImageUrl}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Price",
                              "component": "Price",
                              "name": "PriceLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "double",
                              "type": "numeric",
                              "name": "Price",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${game.Price}"
                            },
                            {
                              "type": "required-validator",
                              "name": "PriceRequiredValidator",
                              "component": "Price",
                              "text": "Price is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Original Price",
                              "component": "OriginalPrice",
                              "name": "OriginalPriceLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "double",
                              "type": "numeric",
                              "name": "OriginalPrice",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${game.OriginalPrice}"
                            },
                            {
                              "type": "required-validator",
                              "name": "OriginalPriceRequiredValidator",
                              "component": "OriginalPrice",
                              "text": "OriginalPrice is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Is Active",
                              "component": "IsActive",
                              "name": "IsActiveLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "bool",
                              "type": "checkbox",
                              "name": "IsActive",
                              "value": "${game.IsActive}"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Category",
                              "component": "CategoryId",
                              "name": "CategoryIdLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "data": "${getCategoriesResult}",
                              "textProperty": "Name",
                              "valueProperty": "Id",
                              "placeholder": "Choose Category",
                              "valueType": "int",
                              "type": "dropdown",
                              "name": "CategoryId",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${game.CategoryId}"
                            },
                            {
                              "type": "required-validator",
                              "name": "CategoryIdRequiredValidator",
                              "component": "CategoryId",
                              "text": "CategoryId is required",
                              "style": {
                                "position": "absolute"
                              },
                              "defaultValue": "0"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Studio",
                              "component": "StudioId",
                              "name": "StudioIdLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "data": "${getStudiosResult}",
                              "textProperty": "Name",
                              "valueProperty": "Id",
                              "placeholder": "Choose Studio",
                              "valueType": "int",
                              "type": "dropdown",
                              "name": "StudioId",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${game.StudioId}"
                            },
                            {
                              "type": "required-validator",
                              "name": "StudioIdRequiredValidator",
                              "component": "StudioId",
                              "text": "StudioId is required",
                              "style": {
                                "position": "absolute"
                              },
                              "defaultValue": "0"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Create Date",
                              "component": "CreateDate",
                              "name": "CreateDateLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "DateTime",
                              "dateFormat": "dd/MM/yyyy",
                              "type": "datepicker",
                              "name": "CreateDate",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${game.CreateDate}"
                            },
                            {
                              "type": "required-validator",
                              "name": "CreateDateRequiredValidator",
                              "component": "CreateDate",
                              "text": "CreateDate is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Latest Update",
                              "component": "LatestUpdate",
                              "name": "LatestUpdateLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "DateTime",
                              "dateFormat": "dd/MM/yyyy",
                              "type": "datepicker",
                              "name": "LatestUpdate",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${game.LatestUpdate}"
                            },
                            {
                              "type": "required-validator",
                              "name": "LatestUpdateRequiredValidator",
                              "component": "LatestUpdate",
                              "text": "LatestUpdate is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "style": {
                                "marginLeft": "1rem"
                              },
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to create new Game!",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "suchimnu.createGame",
                        "parameters": [
                          {
                            "name": "Game",
                            "value": "${game}"
                          }
                        ],
                        "then": [
                          {
                            "type": "close-popup",
                            "result": "${game}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "data": "${game}",
                  "visible": "${game != null}",
                  "itemType": "Admin.Models.Suchimnu.Game"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "suchimnu.getCategories",
        "parameters": [],
        "then": [
          {
            "name": "getCategoriesResult",
            "type": "set",
            "value": "${result.Value.AsODataEnumerable()}",
            "valueType": "IEnumerable<Admin.Models.Suchimnu.Category>"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "suchimnu.getStudios",
        "parameters": [],
        "then": [
          {
            "name": "getStudiosResult",
            "type": "set",
            "value": "${result.Value.AsODataEnumerable()}",
            "valueType": "IEnumerable<Admin.Models.Suchimnu.Studio>"
          }
        ],
        "type": "invoke"
      },
      {
        "name": "game",
        "type": "set",
        "value": "new Admin.Models.Suchimnu.Game(){}",
        "valueType": "Admin.Models.Suchimnu.Game"
      }
    ]
  },
  "name": "Add Game",
  "layout": "Main"
}